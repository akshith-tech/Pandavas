# --- PDF Text Extraction ---
def extract_text_from_pdf(uploaded_file):
    pdf_document = fitz.open(stream=uploaded_file.read(), filetype="pdf")
    text = ""
    for page in pdf_document:
        text += page.get_text()
    return text


# --- App Layout ---
st.title("ğŸ“‘ Study Mate - Ask Questions from PDFsğŸ“‘")

uploaded_file = st.file_uploader("ğŸ“‚ Upload your PDF file", type=["pdf"])

pdf_text = ""
if uploaded_file is not None:
    with st.spinner("ğŸ“– Extracting text from PDF..."):
        pdf_text = extract_text_from_pdf(uploaded_file)
    st.success("âœ… PDF uploaded and text extracted successfully!")


# --- Question Input ---
prompt = st.text_input("ğŸ’¡ Ask a question about your PDF:", placeholder="e.g., Summarize ")

# --- Generate Answer ---
if st.button("ğŸš€ Generate Response", key="generate_response_button"):
    if 'model' in locals() and prompt:
        with st.spinner("âœ¨ Thinking... Please wait..."):
            try:
                context = pdf_text[:15000]  # limit context for token safety
                response = model.generate_content(f"Based on this PDF content:\n\n{context}\n\nQuestion: {prompt}")
                st.markdown(f"<div class='response-box'>{response.text}</div>", unsafe_allow_html=True)
            except Exception as e:
                st.error(f"ğŸ”¥ An error occurred: {e}")
    else:
        st.warning("âš ï¸ Please upload a PDF and enter a question.")
